---
export interface Props {
  tag: string;
  size?: "sm" | "lg";
}

const { tag, size = "sm" } = Astro.props;
---

<li
  class={`inline-block ${
    size === "sm" ? "my-1" : "my-3 mx-1"
  }`}
>
  <a
    href={`/tags/${tag}/`}
    class={`${size === "sm" ? "text-sm" : "text-base"} font-medium group flex items-center gap-1 rounded-full px-4 py-1.5 bg-skin-card border border-skin-line shadow-sm hover:bg-skin-accent/10 hover:border-skin-accent focus-visible:ring-2 focus-visible:ring-skin-accent transition-all`}
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class={`${size === "sm" ? "scale-75" : "scale-100"} mr-1 opacity-70`}
      width="18" height="18"
    >
      <path
        d="M16.018 3.815 15.232 8h-4.966l.716-3.815-1.964-.37L8.232 8H4v2h3.857l-.751 4H3v2h3.731l-.714 3.805 1.965.369L8.766 16h4.966l-.714 3.805 1.965.369.783-4.174H20v-2h-3.859l.751-4H21V8h-3.733l.716-3.815-1.965-.37zM14.106 14H9.141l.751-4h4.966l-.752 4z"
      />
    </svg>
    <span>{tag}</span>
  </a>
</li>

<style>
  a {
    /* No underline, no decoration, pill style handled by classes above */
  }
</style>
