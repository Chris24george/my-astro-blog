---
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import { SITE } from "@config";
---

<Layout title={`Subscribe | ${SITE.title}`}>
  <Header />
  
  <main id="main-content">
    <section id="subscribe-section" class="text-center py-12">
      <h1 class="text-5xl font-bold mb-4">Subscribe to My Newsletter</h1>
      <p class="text-l max-w-2xl mx-auto mb-8">
        NOTE: THIS IS NOT FUNCTIONING YET. THIS IS JUST PLACEHOLDER.
      </p>

      <!-- Newsletter Signup Form -->
      <form action="/subscribe" method="POST" class="max-w-md mx-auto">
        <div class="mb-4">
          <input type="email" name="email" placeholder="Enter your email" required
            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-skin-accent text-black">
        </div>
        <button type="submit"
          class="inline-block w-full px-6 py-3 text-lg font-bold text-white rounded-md transition-colors duration-300"
          style="background-color: rgb(var(--color-accent));"
          onmouseover="this.style.backgroundColor='rgba(var(--color-accent), 0.8)';"
          onmouseout="this.style.backgroundColor='rgb(var(--color-accent))';">
          Subscribe (does nothing)
        </button>
      </form>
  </main>

  <Footer />
</Layout>

<style>
  #main-content {
    @apply mx-auto flex max-w-3xl flex-1 flex-col items-center justify-center;
  }
  #subscribe-section h1 {
    @apply text-skin-accent;
  }
  #subscribe-section p {
    @apply mt-2 text-skin-base;
  }
</style>

